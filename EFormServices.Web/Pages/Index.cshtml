@page "/"
@model EFormServices.Web.Pages.IndexModel
@{
    ViewData["Title"] = "EForm Services";
    Layout = "_AuthLayout";
}

<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-lg-6 d-flex align-items-center justify-content-center bg-primary text-white">
            <div class="text-center p-5">
                <i class="fas fa-file-alt fa-5x mb-4"></i>
                <h1 class="display-3 fw-bold mb-4">EForm Services</h1>
                <p class="lead fs-4 mb-4">Enterprise form management platform with powerful workflow automation</p>
                
                <div class="row g-4 mt-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-magic fa-3x mb-3"></i>
                            <h5>Smart Builder</h5>
                            <p class="small">Drag-and-drop form creation with conditional logic</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-users-cog fa-3x mb-3"></i>
                            <h5>Team Workflows</h5>
                            <p class="small">Multi-level approval processes with role management</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-chart-bar fa-3x mb-3"></i>
                            <h5>Analytics</h5>
                            <p class="small">Real-time insights and performance tracking</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 d-flex align-items-center">
            <div class="w-100 p-5">
                <div class="text-center mb-5">
                    <h2 class="fw-bold mb-3">Welcome to EForm Services</h2>
                    <p class="text-muted fs-5">Streamline your organization's form workflows</p>
                </div>

                <div class="d-grid gap-3 mb-4">
                    <a href="/login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Sign In to Your Account
                    </a>
                    <a href="/auth/register" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        Create New Account
                    </a>
                </div>

                <div class="text-center">
                    <small class="text-muted">
                        Need help? Contact your system administrator
                    </small>
                </div>

                <div class="mt-5 p-4 bg-light rounded">
                    <h6 class="fw-bold mb-3">Key Features</h6>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Multi-tenant secure</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Role-based access</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Real-time notifications</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Mobile responsive</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>File attachments</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Data export tools</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Enterprise-grade security and compliance
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>